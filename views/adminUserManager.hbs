<body>
  <div class="hero-content">
    <div class="hero-content-overlay">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <div class="hero-content-wrap flex flex-column justify-content-center align-items-start">
              <header class="entry-header">
                <h4>Welcome Admin User: {{ user.username }}</h4>
                <h1>User Manager<br/>User List</h1>
              </header>
              <div class="entry-content">
                <p></p>
              </div>
              <footer class="entry-footer read-more">
                <a href="/admin/users/add">Add A New User</a>
              </footer>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-12">
    <div class="entry-content justify-content-center align-items-start">
      {{#if hasUsers}}
      <table border="1">
        <thead>
          <tr>
            <th>&nbsp;</th>
            <!--<th>id</th>-->
            <th>User Name</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Blacklisted</th>
            <th>Admin</th>
            <th>&nbsp;</th>
          </tr>
        </thead>
        <tbody>
          {{#each users}}
          <tr>
            <td><a href="/admin/users/edit/{{username}}">Edit</a></td>
            <!--<td>{{@index}}: {{_id}}</td>-->
            <td>{{username}}</td>
            <td>{{firstname}}</td>
            <td>{{lastname}}</td>
            <td>{{email}}</td>
            <td>{{#if blacklisted}}true{{else}}false{{/if}}</td>
            <td>{{isAdmin}}</td>
            {{#if isAdmin}}
            <td>&nbsp;</td>
            {{else}}
            <td><a href="/admin/users/delete/{{username}}">Delete</a></td>
            {{/if}}
          </tr>
          {{else}}
          <tr>
            <td colspan="8">No Users Found!</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
      {{else}}
      <p>No Users</p>
      {{/if}}
    </div>
  </div>
  <script type='text/javascript' src='../js/jquery.js'></script>
  <script type='text/javascript' src='../js/swiper.min.js'></script>
  <script type='text/javascript' src='../js/masonry.pkgd.min.js'></script>
  <script type='text/javascript' src='../js/jquery.collapsible.min.js'></script>
  <script type='text/javascript' src='../js/custom.js'></script>
</body>
